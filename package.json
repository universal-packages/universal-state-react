{
  "name": "@universal-packages/state-react",
  "version": "1.5.4",
  "description": "React bindings for universal state",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-state-react.git",
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-dependents": "umaintenance update-dependents"
  },
  "dependencies": {
    "@universal-packages/state": "^1.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^17.0.39",
    "@types/react": "^18.0.14",
    "@universal-packages/maintenance": "^1.2.2",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^28.1.1",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "testRegex": "(/tests/.*\\.test\\.(ts|tsx)?)$",
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx)"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
