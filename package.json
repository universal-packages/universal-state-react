{
  "name": "@universal-packages/state-react",
  "version": "1.3.0",
  "description": "React bindings for universal state",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git://git@github.com/universal-packages/universal-state-react.git",
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache"
  },
  "dependencies": {
    "@universal-packages/state": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "@types/react": "^18.0.14",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "jest-environment-jsdom": "^28.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.test\\.(ts|tsx)?)$",
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none"
  }
}
